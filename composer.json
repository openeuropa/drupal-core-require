{
    "name": "openeuropa/drupal-core-require",
    "description": "Dependencies and Drupal core patches needed by OpenEuropa components.",
    "type": "library",
    "license": "EUPL-1.2",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "cweagans/composer-patches": "^1.6",
        "drupal/core": "8.6.x-dev"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"]
        }
    },
    "config": {
        "sort-packages": true
    }
}
